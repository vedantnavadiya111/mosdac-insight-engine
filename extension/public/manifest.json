{
  "manifest_version": 3,
  "name": "ISRO SagarMegh AI Assistant",
  "version": "1.0.0",
  "description": "Chat with MOSDAC AI and download datasets directly from your browser.",
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "downloads",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://mosdac.gov.in/*",
    "http://localhost:8000/*",
    "https://your-deployed-backend.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://mosdac.gov.in/*"
      ],
      "js": [
        "content/injectWidget.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "popup/*"
      ],
      "matches": [
        "https://*.mosdac.gov.in/*"
      ]
    }
  ]
}