{
    "manifest_version": 3,
    "name": "MOSDAC AI Assistant",
    "version": "1.0.0",
    "description": "AI-powered assistant for MOSDAC website",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "https://www.mosdac.gov.in/*",
        "http://localhost:8000/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "MOSDAC Assistant"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.mosdac.gov.in/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}